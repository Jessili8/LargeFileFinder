<Window x:Class="LargeFileFinder.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scanning for Large Files"
        Height="220"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Scanning for large files..." 
                   FontSize="14" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>
        
        <!-- Current directory being scanned -->
        <TextBlock Grid.Row="2" 
                   x:Name="txtCurrentDirectory" 
                   Text="Preparing scan..." 
                   FontSize="11"
                   Foreground="Gray"
                   TextTrimming="CharacterEllipsis"/>
        
        <!-- Progress bar -->
        <ProgressBar Grid.Row="4" 
                     x:Name="progressBar" 
                     Height="20" 
                     IsIndeterminate="True"
                     Background="LightGray"
                     Foreground="#FF3498DB"/>
        
        <!-- Status and found files count -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock x:Name="txtStatus"
                       Text="Starting scan..."
                       FontSize="11"/>
            <TextBlock x:Name="txtFoundFiles"
                       Text=" | Found: 0 files"
                       FontSize="11"
                       Foreground="#FF27AE60"
                       Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Cancel button -->
        <Button Grid.Row="8"
                x:Name="btnCancel"
                Content="Cancel Scan"
                Width="120"
                Height="30"
                HorizontalAlignment="Center"
                Click="BtnCancel_Click"
                Background="#FFE74C3C"
                Foreground="White"
                FontWeight="SemiBold"
                BorderThickness="0"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFC0392B"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#FFBDC3C7"/>
                            <Setter Property="Foreground" Value="#FF7F8C8D"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
